<h2><%= title %></h2>
<% if appointments.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Doctor/Patient</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.order(closed: :asc, date: :desc).each do |appointment| %>
        <tr>
          <td><%= appointment.date.strftime('%Y-%m-%d %H:%M') %></td>
          <td><%= appointment.doctor.name if appointment.doctor %> <%= appointment.user.phone if appointment.user %></td>
          <td><%= appointment.closed? ? 'Closed' : 'Open' %></td>
          <td>
            <% if appointment.closed? %>
              <%= link_to "View Comment", appointment_path(appointment) %>
            <% else %>
              <%= link_to "Cancel", appointment_path(appointment), method: :delete, data: { confirm: "Are you sure?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No appointments.</p>
<% end %>