<% if appointments.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Specialty</th>
        <th>Comment</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.each do |appointment| %>
        <tr>
          <td><%= appointment.date %></td>
          <td><%= appointment.user.name if defined?(appointment.user) %> <%= appointment.doctor.name if defined?(appointment.doctor) %></td>
          <td><%= appointment.doctor.category.name if appointment.doctor && appointment.doctor.category %></td>
          <td><%= appointment.recommendation.present? ? appointment.recommendation : "-" %></td>
          <td>
            <% if appointment.recommendation.blank? && current_user.is_a?(Doctor) && appointment.doctor == current_user %>
              <%= link_to "Comment", edit_appointment_path(appointment) %>
            <% elsif appointment.recommendation.present? %>
              <%= link_to "View Comment", appointment_path(appointment) %>
            <% else %>
              <%= "-" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No appointments found.</p>
<% end %>